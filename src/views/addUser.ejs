<%- include ('partials/_header'); -%>

<!-- FORM -->
<div class="col-md-3">
  <div class="card">
    <div class="card-body">
      <form action="/add" method="POST">
        <div class="form-group">
          <input type="text" name="name" placeholder="Insert Name" class="from-control" >
        </div>
        <div class="form-group">
          <input type="email" name="email" placeholder="Insert Email" class="from-control" required>
        </div>
        <div class="form-group">
          <input type="number" name="phone" placeholder="Insert Phone"  class="from-control" required >
        </div>
        <div class="form-group">
          <input type="password" name="password" placeholder="Insert Password" class="from-control" required>
        </div>
        <div class="form-group">
          <select name="gender" >
            <option  name="gender" select>Femenino</option>
            <option  name="gender" >Masculino</option>
            <option  name="gender" >Otro</option>
          </select>
        </div>
        <div class="form-group">
          <input type="text" name="hobbie" placeholder="Insert Hobbie" class="from-control" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
    </div>
  </div>
</div>
<a href="/">
  <button class="btn btn-info">Regresar a Pantalla Princial</button>
</a>
<%- include ('partials/_footer'); -%>